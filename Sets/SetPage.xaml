<Page
    x:Class="StudySmarterFlashcards.Sets.SetPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding SetInstance, Source={StaticResource Locator}}"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*"/>
      <RowDefinition Height="5*"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="18*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>

    <Button Command="{Binding NavigateHomeCommand}" Grid.Row="0" Grid.Column="0" 
              HorizontalAlignment="Center" VerticalAlignment="Top" Margin="15,15,0,0" Padding="0" BorderThickness="0" Background="Transparent">
      <Image Source="/Assets/HomeIcon.png" ToolTipService.ToolTip="Home"/>
    </Button>

    <Button Command="{Binding EditCommand}" CommandParameter="{Binding FlashCardSet}" Grid.Row="1" Grid.Column="5" 
              HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,0,0" Padding="0" BorderThickness="0" Background="Transparent">
      <Image Source="/Assets/EditIcon.png" ToolTipService.ToolTip="Edit"/>
    </Button>

    <Grid Grid.Row="0" Grid.Column="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="2*"/>
      </Grid.ColumnDefinitions>
      <TextBlock Text="{Binding FlashCardSet.Name, Mode=TwoWay}" FontSize="30" Margin="5,10,5,10" VerticalAlignment="Center"/>
      <TextBlock Grid.Column="1" Text="{Binding FlashCardSet.Description, Mode=TwoWay}" TextWrapping="Wrap" FontSize="10" Margin="5,10,5,10"/>
    </Grid>
    
    <Border Grid.Row="1" Grid.Column="3" BorderBrush="DimGray" BorderThickness="3" CornerRadius="25">
      <GridView ItemsSource="{Binding FlashCardSet.FlashcardCollection}" Grid.Row="1" Grid.Column="3">
        <GridView.ItemTemplate>
          <DataTemplate>
            <Border BorderBrush="DimGray" BorderThickness="1" CornerRadius="15"
                    Margin="20,20,20,20" MaxWidth="300" MaxHeight="300"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
              <StackPanel Margin="10,10,10,10" MaxWidth="300" MaxHeight="300"
                    VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBlock Text="{Binding Term}" FontWeight="Bold" FontSize="12"/>
                <TextBlock Text="{Binding Definition}" FontSize="10"  TextWrapping="Wrap" MaxHeight="250"
                           ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                <CheckBox IsChecked="{Binding IsLearned}" Content="Learned" />
                <CheckBox IsChecked="{Binding IsArchived}" Content="Archived" />
              </StackPanel>
            </Border>
          </DataTemplate>
        </GridView.ItemTemplate>
      </GridView>
    </Border>
  </Grid>
</Page>
